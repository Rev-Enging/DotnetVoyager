{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "CorsOptions": {
    "AllowedOrigins": [
      "http://localhost:3000"
    ]
  },
  "WorkerSettings": {
    "AnalysisConcurrentWorkers": 5,
    "AnalysisTimeoutMinutes": 10
  },
  "StorageOptions": {
    // Path for storing temporary analysis files.
    // Can be an absolute path (e.g., "C:\\MyUploads") or a relative path.
    // If relative, it's resolved from the application's content root.
    // Default and recommended: "AnalysisTemp"
    "Path": "AnalysisTemp",

    // The lifetime of analysis files before they are deleted by the cleanup service.
    "FileLifetimeMinutes": 60,

    // The interval at which the cleanup service runs to delete old analysis files.
    "CleanupIntervalMinutes": 30
  }
}
